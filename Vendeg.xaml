<Window x:Class="QuickServe.Vendeg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickServe"
        mc:Ignorable="d"
        Title="Vendeg" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="#FF6D6D6D">
            <MenuItem Header="Beállítások">
                <MenuItem Header="Asztalok" />
                <MenuItem Header="Rendelések fogadása" IsCheckable="True"/>
                <MenuItem Header="Adatbázisteszt" />
            </MenuItem>
            
            <MenuItem Header="Exportálás">
                <MenuItem Header="Minden adat exportálása" />
                <MenuItem Header="Rendelések exportálása" />
                <MenuItem Header="Biztonsági mentések">
                    <MenuItem Header="Naponta" IsCheckable="True"/>
                    <MenuItem Header="Hetente" IsCheckable="True"/>
                    <MenuItem Header="Havonta" IsCheckable="True"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Súgó">
                <MenuItem Header="Dokumentáció" />
                <MenuItem Header="Elérhetőség" />
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50px"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.Column="0" Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Rectangle Margin="20,20,10,20" Fill="#FFF1F1F1" Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" RadiusX="30" RadiusY="30"/>
                    <Rectangle Margin="10,20,10,20" Fill="#FFF1F1F1" Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" RadiusX="30" RadiusY="30"/>
                    <Rectangle Margin="10,20,20,20" Fill="#FFF1F1F1" Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" RadiusX="30" RadiusY="30"/>
                    <Button Content="Rendelés" Grid.Column="0" Grid.Row="2" Margin="10,0,0,30" FontSize="20" FontWeight="Bold" Background="{x:Null}" Foreground="White" BorderBrush="#FF6D6D6D" BorderThickness="0" Click="Button_Click"/>
                    <Button Content="Rendelés" Grid.Column="1" Grid.Row="2" Margin="0,0,0,30" FontSize="20" FontWeight="Bold" Background="{x:Null}" Foreground="White" BorderBrush="#FF6D6D6D" BorderThickness="0"/>
                    <Button Content="Rendelés" Grid.Column="2" Grid.Row="2" Margin="0,0,10,30" FontSize="20" FontWeight="Bold" Background="{x:Null}" Foreground="White" BorderBrush="#FF6D6D6D" BorderThickness="0"/>
                </Grid>
            </ScrollViewer>
        </Grid>

    </DockPanel>
</Window>
